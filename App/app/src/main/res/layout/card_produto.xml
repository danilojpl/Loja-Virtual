<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/produto_imagem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/produto_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:text="Nome"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/produto_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:maxLines="3"
                android:text="Eveniet numquam perferendis nesciunt minima qui nostrum. Praesentium quae ea sit. Maxime omnis ipsa aspernatur consequatur voluptas at. Nihil natus maxime et at maxime et recusandae. Laboriosam ipsam magni sequi vel facere consequatur. Animi quo animi."
                android:textSize="10sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/produto_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="R$1999,99"
                android:textSize="14sp" />
        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>